<h1>Reset password</h1>

<div class="row">
  <div class="span6 offset3 text-center">
    <%= form_tag password_resets_path, :method => 'post', :html => {:class => "form-control"} do |f| %>
      <div class="form-group">

        <%= label :email, 'Email' %>
        <%= text_field :email, params[:email] %>
          
        <div><%= submit_tag "Reset", class: "btn btn-custom" %></div>
      </div>
    <% end %>
  </div>
</div>
