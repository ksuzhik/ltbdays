<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3 text-center">
    <%= simple_form_for @user, :html => {:class => "form-control"} do |f| %>
      <div class="form-group">
        <%= f.error_notification %>

        <%= f.input :first_name %>

        <%= f.input :last_name %>

        <%= f.input :email %>

        <%= f.date_select :birthdate, {:prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }, :start_year => 1960},  {:class => 'span2'} %>

        <%= f.input :password %>

        <%= f.input :password_confirmation %>

        <div><%= f.submit "Create my account", class: "btn btn-custom" %></div>
      </div>
    <% end %>
  </div>
</div>
